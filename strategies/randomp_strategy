from strategies.no_memory_strategy import NoMemoryStrategy

import random


class RandomPStrategy(NoMemoryStrategy):

    def __init__(self):
        self.probability = random.uniform(0, 1)

    def play(self, last_plays: list) -> bool:
        return random.uniform(0, 1) <= self.probability

    def __str__(self):
        super().__str__()
        return "Random"
